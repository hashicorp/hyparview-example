#!/bin/bash
set -e

make build root terraform/hosts

boot=`head -n1 terraform/hosts`
rest=`tail -n+2 terraform/hosts`

set -ae

DOMAIN="test"
BOOTSTRAP="$boot:10000"
STAT_UDP="$BOOTSTRAP"
HTTP_UI="$boot:8080"

LO=0
HI=199

for h in `cat terraform/hosts`; do
    PUBLIC="$h:" bin/provision "ec2-user@$h" &
    LO=$(($HI + 1))
    HI=$(($HI + 200))
    HTTP_UI=""
done
wait

